<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/image_pesan"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_description"
        android:text="Lapangan A"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/ev_namalengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_pesan"
        android:hint="Nama Lengkap"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"/>

    <EditText
        android:id="@+id/ev_nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_namalengkap"
        android:hint="Nomor HP"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"/>

    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:textColor="@color/colorWhite"
        android:text="Pesan"
        android:layout_below="@id/ev_nohp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>