<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:theme="@style/AppTheme"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".FutsalActivity">


    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:entries="@array/lapangan"
        app:hintText="Cari Lapangan" />

    <Button
        android:id="@+id/btn_tanggal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/km"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Booking"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="46dp"
        android:focusable="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:textSize="20dp"
        android:layout_below="@id/edit_tanggal"/>

    <Button
        android:id="@+id/cari"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@color/colorBackground"
        android:text="Cari"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />
</RelativeLayout>